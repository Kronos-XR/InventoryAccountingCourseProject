<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InventoryAccountingClient.Pages.AddRolePage" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Добавление"  FontSize="24" HorizontalOptions="Center" Margin="0,20,0,0"/>
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="300">
                <Label Text="Название роли: " FontSize="20"/>
                <Entry x:Name="EntrName"/>
                <Button x:Name="btnSave" Text="Добавить" Clicked="btnSave_Clicked" HeightRequest="52" Margin="0,20,0,0"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>