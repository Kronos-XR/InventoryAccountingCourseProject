<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InventoryAccountingClient.Pages.EditUserPage" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Добавление"  FontSize="24" HorizontalOptions="Center" Margin="0,20,0,0"/>
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="300">
                <Label Text="Id: " FontSize="20"/>
                <Entry x:Name="EntrId"/>
                <Label Text="Login: " FontSize="20"/>
                <Entry x:Name="EntrLogin"/>
                <Label Text="Password: " FontSize="20"/>
                <Entry x:Name="EntrPassword"/>
                <Label Text="Id Role " FontSize="20"/>
                <Entry x:Name="EntrIdRole"/>
                <Button x:Name="btnSave" Text="Сохранить" HeightRequest="52" Clicked="btnSave_Clicked" Margin="0,20,0,0"/>
                <Button x:Name="btnUndo" Text="Отменить" HeightRequest="52" Clicked="btnUndo_Clicked" Margin="0,30,0,0"/>
                <Button x:Name="btnDelete" Text="Удалить" HeightRequest="52" Clicked="btnDelete_Clicked" Margin="0,30,0,0" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>