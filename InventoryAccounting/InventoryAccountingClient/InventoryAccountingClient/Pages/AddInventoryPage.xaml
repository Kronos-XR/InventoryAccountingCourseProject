<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InventoryAccountingClient.Pages.AddInventoryPage" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Добавление"  FontSize="24" HorizontalOptions="Center" Margin="0,20,0,0"/>
                <StackLayout HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="300">
                    <Label Text="Имя: " FontSize="20"/>
                    <Entry x:Name="EntrName"/>
                    <Label Text="Колличество: " FontSize="20"/>
                    <Entry x:Name="EntrQuantity"/>
                    <Label Text="id категории: " FontSize="20"/>
                    <Entry x:Name="EntrIdCategory"/>
                    <Button x:Name="btnSave" Text="Добавить" Clicked="btnSave_Clicked" HeightRequest="52" Margin="0,20,0,0"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>